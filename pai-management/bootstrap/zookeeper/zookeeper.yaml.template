apiVersion: apps/v1
kind: DaemonSet
metadata:
  name: zookeeper-ds
spec:
  selector:
    matchLabels:
      app: zookeeper
  template:
    metadata:
      labels:
        app: zookeeper
    spec:
      hostNetwork: true
      hostPID: true
      containers:
      - name: zookeeper
        image: {{ clusterinfo['dockerregistryinfo']['prefix'] }}zookeeper:{{ clusterinfo['dockerregistryinfo']['docker_tag'] }}
        imagePullPolicy: Always
        volumeMounts:
        - mountPath: /var/lib/zoodata
          name: zookeeper-storage
        - mountPath: /host-configuration
          name: host-confg-volume
        readinessProbe:
          exec:
            command:
            - cat
            - /jobstatus/jobok
          initialDelaySeconds: 5
          periodSeconds: 3
        env:
        - name: JAVA_OPTS
          value: "-server -Xmx512m"
        resources:
          limits:
            memory: "1Gi"
            cpu: "1000m"
      imagePullSecrets:
      - name: {{ clusterinfo['dockerregistryinfo']['secretname'] }}
      volumes:
      - name: zookeeper-storage
        hostPath:
          path: {{ clusterinfo[ 'dataPath' ] }}/zoodata
      - name: host-confg-volume
        configMap:
          name: host-configuration
